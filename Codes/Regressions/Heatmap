#Make a heatmap of all of the instruments
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Read the csv file
data = pd.read_csv(r"C:\Users\RL46RG\KL\Thesis\data\mm.csv")

# Drop the 'date' column
data = data.drop(columns=['date'])

# Calculate correlations between variables
correlation_matrix = data.corr()

# Create a figure object with a larger size
plt.figure(figsize=(30, 30))

# Create a heatmap with larger labels
sns.heatmap(correlation_matrix, annot=False, cmap='coolwarm', xticklabels=True, yticklabels=True)

# Rotate the y labels (variables) to be displayed horizontally
plt.yticks(rotation=0)

# Increase the font size of the labels
plt.tick_params(axis='both', which='major', labelsize=10)

# Display the figure
plt.show()


